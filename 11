#include<iostream>

using namespace std;

int main(void) {
    float num1, num2, sum, average;

    cout << "Enter two numbers: ";  // putting to standard output
    cin >> num1;            // getting from standard input
    cin >> num2;

    sum = num1 + num2;
    average = sum/2;

    cout << "Sum = " << sum << endl;
    cout << "Average = " << average << endl;

    return 0;
}


